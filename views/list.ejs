<%- include('header'); -%>

<body>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
      <%for(var i=0; i < newTaskItems.length; i++){%>
      <div class="item">
        <input type="checkbox" />
        <p><%=newTaskItems[i]%></p>
      </div>
      <%}%>

      <form class = "item" action="/" method="post">
        <input id="task" type="text" name="taskName" placeholder="New Task" autocomplete="off"/>
        <button type="submit" name = "list" value= <%= listTitle %>>+</button>
      </form>
    </div>
  </body>
</html>

<%- include('footer'); -%>